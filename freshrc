# fresh
fresh freshshell/fresh bin/fresh --bin

# fresh plugins
fresh freshshell/fresh-open bin/fresh-open --bin
fresh freshshell/fresh-open shell/cdf.sh
fresh akatov/fresh-profile bin/fresh-profile --bin

# bin scripts
fresh https://gist.github.com/1209316.git gitio --bin

# leiningen
fresh akatov/leinfiles . --file=~/.lein/ --ref=2c434b513a1665fa9af9c4af8fcaf61b798feca6 # TODO: remove ref and change to cldwalker/leinfiles once PR is merged

# gitconfig
fresh-options --file=~/.gitconfig --marker
  fresh gitconfig/user
  fresh gitconfig/alias
  fresh gitconfig/push
  fresh gitconfig/credential
  [[ -n "$PROFILE" ]] && \
    fresh gitconfig/$PROFILE
  fresh https://bitbucket.org/akatov/private.git gitconfig/default
  [[ -n "$PROFILE" ]] && \
    fresh https://bitbucket.org/akatov/private.git gitconfig/$PROFILE
fresh-options

# zshrc
fresh-options --file=~/.zshrc --marker
  fresh https://bitbucket.org/akatov/private.git zshrc/default
  fresh zshrc/$PROFILE
fresh-options

# tmux.conf
fresh-options --file=~/.tmux.conf --marker
  fresh tmux.conf/all
fresh-options

# ghci
fresh ghci --file

# irbrc
fresh irbrc --file

# pryrc
fresh pryrc --file

# ackrc
fresh ackrc --file

# mongorc.js
fresh mongorc.js --file

# Xdefaults
fresh Xdefaults --file

# csshrc
fresh csshrc --file

# rdebugrc
fresh rdebugrc --file

# yi
fresh yi.hs --file=~/.config/yi/yi.hs
